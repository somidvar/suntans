########################################################################
#
#  Input file for SUNTANS.
#
########################################################################
Nkmax							150				# Number of cells in the vertical
stairstep						0				# 1 if stair-stepping, 0 if partial-stepping
rstretch						1				# Stretching factor for vertical grid (1<=rstretch<1.1)
CorrectVoronoi					0				# Whether or not to correct Voronoi points
prettyplot						0				# Use quadratic for output u and v
VoronoiRatio					0				# Adjust the voronoi points by this amount if 1 then = centroid.
vertgridcorrect 				1 				# Correct vertical grid if Nkmax is too small
IntDepth 						0				# 1 if interpdepth, 0 otherwise
dzsmall							0.1				# Smallest grid spacing ratio before correction
scaledepth 						0 				# Scale the depth by scalefactor
scaledepthfactor 				0 				# Depth scaling factor (to test deep grids with explicit methods)
thetaramptime	        		0  				# Timescale over which theta is ramped from 1 to theta (fs theta only)
beta							7.71e-4			# Expansivity of salt (previously 6.05e-4)
theta							0.55			# 0: fully explicit, 1: fully implicit
thetaS							0.55			# For scalar advection
thetaB							0.55			# For scalar advection
kappa_s                 		0      			# Vertical mass diffusivity
kappa_sH               	 		0       		# Horizontal mass diffusivity
gamma 							1.0 			# Coefficient of expansivity of temperature.
kappa_T                 		0       		# Vertical thermal diffusivity
kappa_TH                		0       		# Horizontal thermal diffusivity
nu 								5e-3	  		# Vertical eddy viscosity of water (m^2 s^-1) (NuV>0.5*Wmax*Wmax*dt=0.5*0.005^2*10)
nu_H 							1	    	  	# Horizontal laminar viscosity of water (m^2 s^-1) (NuH>0.5*Umax*Umax*dt=0.5*0.1^2*10)
z0T	               				0.0 			# Top roughness
z0B	                			0.0				# Bottom roughness
CdT	                			0.0 			# Drag coefficient at surface
CdB	                			1e-3			# Drag coefficient at bottom
CdW								0				# Drag coefficient at sidewalls
tau_T							6e-5			# Wind shear stress divided by Rho0
turbmodel						1				# Turbulence model (0 for none, 1 for MY25)
dt 								5				# Time step 
Cmax 							0.5				# Maximum permissible Courant number
nsteps 							3.63e5 			# Number of steps 3e5
ntout   						120  			# How often to output data 30
ntprog   						1 				# How often to report progress (in %)
ntconserve 						1				# How often to output conserved data
nonhydrostatic					1				# 0 = hydrostatic, 1 = nonhydrostatic
cgsolver						1				# 0 = GS, 1 = CG
maxiters						1e3				# Maximum number of CG iterations
qmaxiters						2e3				# Maximum number of CG iterations for nonhydrostatic pressure
qprecond						2				# 1 = preconditioned, 0 = not preconditioned
epsilon							1e-10 			# Tolerance for CG convergence
qepsilon						1e-5			# Tolerance for CG convergence for nonhydrostatic pressure
resnorm							0				# Normalized or non-normalized residual
relax							1				# Relaxation parameter for GS solver.	
amp 							0				# amplitude
omega 							0				# frequency
flux 							0				# flux
timescale						0				# timescale for open boundary condition
volcheck						0				# Check for volume conservation
masscheck						2				# Check for mass conservation
nonlinear						0				# No momentum advection: 0, first-order upwind: 1, Central-differencing: 2
laxWendroff    				 	0       		# No Lax Wendroff diffusion coefficients
laxWendroff_Vertical    		0      			# No Lax Wendroff diffusion coefficients
newcells						0				# 1 if adjust momentum in surface cells as the volume changes, 0 otherwise
wetdry							0       		# 1 if wetting and drying, 0 otherwise
Coriolis_f              		0      			# Coriolis frequency f=2*Omega*sin(phi) (hard coded into sources.c for 2d implementation)
sponge_distance	       			0 				# Decay distance scale for sponge layer
sponge_decay	        		0				# Decay time scale for sponge layer
readSalinity					0				# Whether or not to read initial salinity profile from file InitSalinityFile
readTemperature					0				# Whether or not to read initial temperature profile from file InitTemperatureFile
maxFaces				        4   			# number of faces
fixdzz							1				# Fix vertical grid spacing
grav							9.81			# Earth's gravitational constant (SI units)
ntoutStore						0				# How often to save restart data.  If 0 then just save at the last time step
TVDsalt							4				# Values for salt and temperature are Van Leer, for turbulence model use first-order upwind
TVDtemp							4				# Values for salt and temperature are Van Leer, for turbulence model use first-order upwind
TVDturb							0				# Values for salt and temperature are Van Leer, for turbulence model use first-order upwind
AB 								2				# Adam-Bashforth for explicit terms
TVDmomentum						3				# TVD for advection of momentum
conserveMomentum				1 				# Use conservative momentum advection scheme or not
thetaM							-1 				# Implicit vertical advection of horizontal momentum when thetaM>0.5. A value of -1 implies that the original conservative scheme is used in UPredictor()
mergeArrays						1 				# If mergeArrays=1 then merge output data into one file.  Otherwise output into separate files on each processor with suffix file.processor_number
computeSediments				0 				# Whether or not to compute sediments
agemethod						1 				# Age calculation method: 1 use river boundaries, 2 - internal source
latitude						30				# Latitude - required by solar radiation function
gmtoffset						0 				# GMT offset parameter in hours used to correct solar radiation term
varmodel						1 				# Interpolation model. 0 - inverse distance weighting; 1 - kriging with spherical variogram
nugget							0.1 			# variogram nugget parameter. Covariance = 1 - nugget @ distance = 0
sill							0.9 			# variogram sill parameter. Covariance = 1 - sill @ distance = range
range							1e5 			# variogram range parameter. Decorrelation length scale.
Lsw								2.0 			# Light extinction depth [m]
Cda								1.1e3 			# Drag and heat flux coefficients
Ch								1.4e3 			# Drag and heat flux coefficients
Ce								1.4e3 			# Drag and heat flux coefficients
nstepsperncfile					999999 			# Number of steps to write to each netcdf file (mergeArray=1 only)
ncfilectr						0 				# File number of first netcdf output file (mergeArray=1 only)
hprecond						1 				# 0:No preconditioner for free-surface solver, 1:Jacobi preconditioner
interp							0 				# default value uses classic SUNTANS Perot method (type 0) vs Quadratic (type 1)
linearFS						0 				# value is for a nonlinear free surface
smoothbot						0 				# Treatment in SetFluxHeight and ComputeVelocityVector for smooth bottom flow when partial stepping is used
RadiationBoundary   			1   			# Whether you want to use Omidvar-Woodson implementation method for damping salinity and velocity near the boundary, 1: True, 0: False
SpongeMean						0e4 	    	# The formula used by Omidvar-Woodson method is exp(-Distance/RadiationBoundaryCoefficient) in which Distance is calculated for each cell from the boundary
SpongeSTD						1.5e3	   		# The formula used by Omidvar-Woodson method is exp(-Distance/RadiationBoundaryCoefficient) in which Distance is calculated for each cell from the boundary
SpongeCellLocationX				49878.5			# X Location of Sponge Layer
SpongeEdgeLocationX				49927.5			# X Location of Sponge Layer
SpongeCellLocationY				50				# Y Location of Sponge Layer
SpongeEdgeLocationY				50				# Y Location of Sponge Layer
DiurnalTidePeriod				86148			# Diurnal tidal priod
SemiDiurnalTidePeriod			44712			# Semi-Diurnal tidal priod
DiurnalWindPeriod				86400			# Diurnal Wind Period
DiurnalTideAmplitude			-0.1027			# Diurnal Tidal amplitude at sea-side for 72 cm wave at shore-side -0.1027
SemiDiurnalTideAmplitude		-0.1454			# Semi-Diurnal Tidal amplitude at sea-side for 98 cm wave at shore-side -0.1454
ASal							0.821			# Salinity range variation Used by Omidvar and Woodson salinity=ASal*tanh(BSal*(-Z-CSal)+DSal or Salinity=ASal*pow(-Z or CSal,BSal)+DSal
BSal							0.1				# Salinity gradient used by Omidvar and Woodson salinity=ASal*tanh(BSal*(-Z-CSal)+DSal or Salinity=ASal*pow(-Z or CSal,BSal)+DSal
CSal							10				# Depth of the halocline Used by Omidvar and Woodson salinity=ASal*tanh(BSal*(-Z-CSal)+DSal or Salinity=ASal*pow(-Z or CSal,BSal)+DSal
DSal							33.6			# Background Salinity used by Omidvar and Woodson salinity=ASal*tanh(BSal*(-Z-CSal)+DSal or Salinity=ASal*pow(-Z or CSal,BSal)+DSal
SalinityAdjustmentFlag			1				# Wheather or not adjusting the salinity profile with SalinityRange
SalinitySpecifiedRange			1.20			# Maximum Salinity range used by Omidvar and Woodson salinity=ASal*tanh(BSal*(-Z-CSal)+DSal or Salinity=ASal*pow(-Z or CSal,BSal)+DSal
SalinitySpecifiedMax			34.4			# The maximum of salinity profile	
WindTimeLag						10800			# The lag time between wind and tide in sec used by Omidvar and Woodson
########################################################################
#
# NetCDF / Meteorological / Boundary parameters
#
########################################################################
outputNetcdf	 	1				# Output data to netcdf format (0 - binary, 1 - netcdf)
outputNetcdfFile	Result			# Name of the output netcdf file
starttime           0.0				# start time
basetime            0.0				# basetime
metmodel            0     			# metmodel specification (0 for analytical, >0 for read netcdf)
netcdfBdy           0	  			# 1 - Read the open boundary data from a netcdf file
readinitialnc		0	  			# 1 - Read initial conditions from a netcdf file, 0 otherwise
calcage        		0     			# Turn on the age calculation
calcaverage         0	  			# Calculate averages
ntaverage           120	  			#
averageNetcdfFile	iwaves_AVG.nc	#
